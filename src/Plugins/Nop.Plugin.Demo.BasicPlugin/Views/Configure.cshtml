@model Nop.Plugin.Demo.BasicPlugin.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync("StoreScopeConfiguration")

<form asp-controller="DemoBasicPlugin" asp-action="Configure" method="post">
    <div class="cards-group">
        <div class="card card-default">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="DefaultSearchRadius" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="DefaultSearchRadius" />
                        <span asp-validation-for="DefaultSearchRadius"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="MaxSearchRadius" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="MaxSearchRadius" />
                        <span asp-validation-for="MaxSearchRadius"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="EnableCaching" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="EnableCaching" />
                        <span asp-validation-for="EnableCaching"></span>
                    </div>
                </div>
                <div class="form-group row" id="cacheDurationGroup">
                    <div class="col-md-3">
                        <nop-label asp-for="CacheDurationMinutes" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="CacheDurationMinutes" />
                        <span asp-validation-for="CacheDurationMinutes"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    $(document).ready(function() {
        $("#@Html.IdFor(model => model.EnableCaching)").click(function() {
            $("#cacheDurationGroup").toggle($(this).is(":checked"));
        });

        $("#cacheDurationGroup").toggle($("#@Html.IdFor(model => model.EnableCaching)").is(":checked"));
    });
</script>
